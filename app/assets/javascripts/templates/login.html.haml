.row#header-row
  .col-md-2.col-md-offset-5
    %h1#main-header
      Log in
.row
  .col-md-4.col-md-offset-4
    .alert.alert-danger{"ng-show": "error", role: "alert"}
      {{error}}
.row
  .col-md-2.col-md-offset-5
    %form{"ng-submit": "submitLogin(loginForm)", role: "form", "ng-init": "loginForm = {}"}
      .form-group
        %input.form-control{placeholder: "Email", type: "email", name: "email", 
          id: "email",  "ng-model": "loginForm.email", required: "required"}
      .form-group
        %input.form-control{placeholder: "Password", type: "password", 
          name: "password", id: "password",  "ng-model": "loginForm.password", 
          required: "required"}
      %input.btn.btn-info{type: "submit", value: "LOG IN"}