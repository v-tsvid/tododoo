.row#header-row
  .col-md-2.col-md-offset-5
    %h1#main-header
      Sign up
.row
  .col-md-4.col-md-offset-4
    .alert.alert-danger{"ng-show": "error", role: "alert"}
      {{error}}
.row
  .col-md-2.col-md-offset-5
    %form{"ng-submit": "handleRegBtnClick()", role: "form", 
      "ng-init": "registrationForm = {}"}
      .form-group
        %input.form-control{placeholder: "Email", type: "email", name: "email", 
          id: "email",  "ng-model": "registrationForm.email", 
          required: "required"}
      .form-group
        %input.form-control{placeholder: "Username", type: "username", 
          name: "username", id: "username",  
          "ng-model": "registrationForm.username", required: "required"}
      .form-group
        %input.form-control{placeholder: "Password", type: "password", 
          name: "password", id: "password",  
          "ng-model": "registrationForm.password", required: "required"}
      .form-group
        %input.form-control{placeholder: "Confirm password", type: "password", 
          name: "password_confirmation", id: "password_confirmation",  
          "ng-model": "registrationForm.password_confirmation", 
          required: "required"}
      %input.btn.btn-success{type: "submit", value: "SIGN UP"}
    %br
    .panel-footer
      Already signed up?
      = succeed "." do
        %a{"ui-sref": "login"} Log in here